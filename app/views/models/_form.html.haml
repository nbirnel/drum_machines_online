= form_for @model do |f|
  - if @model.errors.any?
    #error_explanation
      %h2= "#{pluralize(@model.errors.count, "error")} prohibited this model from being saved:"
      %ul
        - @model.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :default_channel
    = f.number_field :default_channel
  .field
    = f.label :channel_reassignable
    = f.check_box :channel_reassignable
  .field
    = f.label :MIDI_in
    = f.check_box :MIDI_in
  .field
    = f.label :MIDI_out
    = f.check_box :MIDI_out
  .field
    = f.label :MIDI_through
    = f.check_box :MIDI_through
  .field
    = f.label :USB
    = f.check_box :USB
  .actions
    = f.submit 'Save'
